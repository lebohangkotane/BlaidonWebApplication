
@{
    ViewBag.Title = "EditUsers";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">

            <p style="margin-left: 2.5em;padding: 0 7em 2em 0;border-width: 0px; border-color: black; border-style:solid;"></p>
            <h1 class="mt-4">Edit Users</h1>
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Data of All Registered Users.
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">

                        <thead>
                            <tr>
                                <th>User_Identity</th>
                                <th>Date_Created</th>
                                <th>Email_add</th>
                                <th>FName</th>
                                <th>LName</th>
                                <th>Phone_No</th>

                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>User_Identity</th>
                                <th>Date_Created</th>
                                <th>Email_add</th>
                                <th>FName</th>
                                <th>LName</th>
                                <th>Phone_No</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @{
                                if (Model != null)
                                {
                                    foreach (var Data in Model)
                                    {
                                        <tr>
                                            <td>@Data.User_Identity</td>
                                            <td>@Data.Date_Made</td>
                                            <td>@Data.Email_add</td>
                                            <td>@Data.FName</td>
                                            <td>@Data.LName</td>
                                            <td>@Data.Phone_No</td>

                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <hr style="height: 4px; background-color: #0d6efd ">
            <div style="float:left;">
                <form action="DlteUsrs" method="post">
                    <h3 class="text-center">Remove a User Account</h3><br>
                    <div class="form-group">
                        <label for="User_Identity">User Identity</label>
                        <input type="tel" name="User_Identity" id="User_Identity" placeholder="Enter User_Identity" class="form-control" required>
                    </div>
                    <br>
                    <style>
                        .Delbutton {
                            background-color: #f44336;
                            border-radius: 4px;
                            padding: 5px 20px;
                        }
                    </style>
                    <div class="form-group">
                        <button class="Delbutton" id="Delete" type="submit">Delete</button>
                    </div>
                </form>
            </div>
            <script>
                // Restricts input for the given textbox to the given inputFilter.
                function setInputFilter(textbox, inputFilter) {
                    ["input", "keydown", "keyup", "mousedown", "mouseup", "select", "contextmenu", "drop"].forEach(function (event) {
                        textbox.addEventListener(event, function () {
                            if (inputFilter(this.value)) {
                                this.oldValue = this.value;
                                this.oldSelectionStart = this.selectionStart;
                                this.oldSelectionEnd = this.selectionEnd;
                            } else if (this.hasOwnProperty("oldValue")) {
                                this.value = this.oldValue;
                                this.setSelectionRange(this.oldSelectionStart, this.oldSelectionEnd);
                            } else {
                                this.value = "";
                            }
                        });
                    });
                }
                // Install input filters.
                setInputFilter(document.getElementById("User_Identity"), function (value) {
                    return /^\d*$/.test(value);
                });
            </script>
        </div>
    </main>
</div>

