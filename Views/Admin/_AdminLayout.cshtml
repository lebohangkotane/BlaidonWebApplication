<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="~/Content/ourTemplate/AdminTemplate/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="../Admin/Dashboard">Blaidon Administration</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
        </form>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="../Home/Index">Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <a class="nav-link" href="../Admin/Dashboard">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Dashboard
                            </a>
                            <a class="nav-link" href="../Admin/ServiceRequest">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Service Requests[@BlaidonWebApplication.Controllers.AdminController.Myvariables.y]
                            </a>
                            <a class="nav-link" href="../Admin/EnquiryRequest">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Enquiries[@BlaidonWebApplication.Controllers.AdminController.Myvariables.x]
                            </a>
                            <div class="sb-sidenav-menu-heading">Administration</div>
                            <a class="nav-link" href="../Admin/EditUsers">
                                <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                                Edit Users[@BlaidonWebApplication.Controllers.AdminController.Myvariables.z]
                            </a>
                            <a class="nav-link" href="../Admin/EditAdmins">
                                <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                Edit Admins[@BlaidonWebApplication.Controllers.AdminController.Myvariables.a]
                            </a>
                        </div>
                    </div>
                    <div class="sb-sidenav-footer">
                        <div class="small">Admin Logged in as: @BlaidonWebApplication.Controllers.LoginController.Global.uiAStrg</div>
                        <div class="text-muted">Copyright &copy; Quad Systems 2021 </div>
                    </div>
                </nav>
            </div>
            @RenderBody()
        </div>
    </div>

    <div>
        <div>
            <div id="layoutSidenav_content">
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; Quad Systems 2021 </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Content/ourTemplate/AdminTemplate/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/Content/ourTemplate/AdminTemplate/assets/demo/chart-area-demo.js"></script>
    <script src="~/Content/ourTemplate/AdminTemplate/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="~/Content/ourTemplate/AdminTemplate/js/datatables-simple-demo.js"></script>
    </body>
</html>
